generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id         String       @id @default(cuid())
  status     GameStatus
  players    GamePlayer[] @relation("players")
  field      Json?
  winner     GamePlayer?  @relation(fields: [winnerId], references: [id])
  winnerId   String?
  gameOverAt String?
}

enum GameStatus {
  idle
  inProgress
  gameOver
  gameOverDraw
}

model GamePlayer {
  id     String @id @default(cuid())
  game   Game   @relation("players", fields: [gameId], references: [id])
  gameId String
  user   User   @relation(fields: [userId], references: [id])
  userId String
  index  Int

  Game Game[]
}

model User {
  id           String       @id @default(cuid())
  login        String
  rating       Int
  passwordHash String
  salt         String       @default("")
  players      GamePlayer[]
}
